#include <stdio.h>

float Areasquare(float side);
float AreaRectangle(float a, float b);
float Areacircle( float r);

int main() {
float side, r, a, b;

printf("enter the side of square");
scanf("%f",&side);
printf("enter the two Sides of Rectangle");
scanf("%f %f",&a ,&b);

printf("enter the radius");
scanf("%f",&r);
printf ("Area of square is:%f\n",Areasquare(side));

printf("Area of Rectangle is :%f\n",AreaRectangle(a,b));

printf ("Area of circle is :%f\n",Areacircle(r));

return 0;
}
float Areasquare(float side){
return side * side;
}
float AreaRectangle (float a, float b){
return a * b;
}
float Areacircle( float r){
return 3.14 * r * r;
}
