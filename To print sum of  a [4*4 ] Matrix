#include <stdio.h>

int main() {
    int i,j,a[4][4],b[4][4],c[4][4];
    for(i=0;i<4;i++)
        for(j=0;j<4;j++){
            printf("\nenter the elements a[%d][%d]:",i,j);
            scanf("%d",&a[i][j]);
            printf("\nenter the elements b[%d][%d]:",i,j);
            scanf("%d",&b[i][j]);
            c[i][j]=a[i][j]+b[i][j];
             }
             printf("\n After addition the matrix c[%d][%d]:",i+1,j+1);
             
             for(i=0;i<4;i++){
                 printf("\n");
                 for(j=0;j<4;j++){
                     printf("\t%d",  c[i][j]);
                 }
             }
        return 0;
     }
